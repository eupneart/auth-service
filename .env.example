# =============================================================================
# AUTH SERVICE ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and update the values according to your environment

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_PORT=80
APP_ENV=development
APP_NAME=eupneart-auth-service

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=users
DB_SSLMODE=disable
DB_TIMEZONE=UTC
DB_CONNECT_TIMEOUT=5

# Full DSN (matches docker-compose format)
DSN=host=postgres port=5433 user=postgres password=your_password dbname=users sslmode=disable timezone=UTC connect_timeout=5

# -----------------------------------------------------------------------------
# JWT TOKEN CONFIGURATION
# -----------------------------------------------------------------------------
# CRITICAL: Generate a secure JWT secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=change_this_jwt_secret_in_production_use_openssl_rand_base64_32

# JWT settings
JWT_ISSUER=eupneart-auth-service
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://eupneart.com,http://localhost:4200,http://localhost:8080

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
BCRYPT_COST=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# -----------------------------------------------------------------------------
# SESSION MANAGEMENT
# -----------------------------------------------------------------------------
MAX_SESSIONS_PER_USER=5
TOKEN_CLEANUP_INTERVAL=1h

# Add other configuration options as needed...
